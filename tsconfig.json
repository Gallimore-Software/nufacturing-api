{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/application/*"],
      "@infra/*": ["src/infrastructure/*"],
      "@domain/*": ["src/domain/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@/*": ["src/*"],
      // Application
      "@app-inventory/*": ["src/application/inventory/*"],
      // Infrastructure
      "@models/*": ["src/infrastructure/persistence/models/*"],
      "@persistence/*": ["src/infrastructure/persistence/*"],
      "@logging/*": ["src/infrastructure/logging/*"],
      "@infra-events/*": ["src/infrastructure/event-handlers/*"],
      "@notifications/*": ["src/infrastructure/notifications/*"],
      "@scheduling/*": ["src/infrastructure/scheduling/*"],
      // Interfaces
      "@middleware/*": ["src/interfaces/http/middlewares/*"],
      "@controllers/*": ["src/interfaces/http/controllers/*"],
      "@routes/*": ["src/interfaces/http/routes/*"],
      "@dto/*": ["src/interfaces/dtos/*"],
      // Domain
      "@domain-events/*": ["src/domain/events/*"],
      "@domain-entities/*": ["src/domain/entities/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__", "dist"]
}
