{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "outDir": "./dist",  // Output directory for compiled files
    "rootDir": "./src",  // Root directory for source files
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@event-handlers/*": [
        "src/app/event-handlers/*"
      ],
      "@mappers/*": [
        "src/app/mappers/*"
      ],
      "@services/*": [
        "src/app/services/*"
      ],
      "@use-cases/*": [
        "src/app/use-cases/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@entities/*": [
        "src/domain/entities/*"
      ],
      "@errors/*": [
        "src/domain/errors/*"
      ],
      "@events/*": [
        "src/domain/events/*"
      ],
      "@repository-interfaces/*": [
        "src/domain/interfaces/repositories/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@event-dispatchers/*": [
        "src/infrastructure/event-dispatchers/*"
      ],
      "@logging/*": [
        "src/infrastructure/logging/*"
      ],
      "@notifications/*": [
        "src/infrastructure/notifications/*"
      ],
      "@models/*": [
        "src/infrastructure/persistence/models/*"
      ],
      "@repositories/*": [
        "src/infrastructure/persistence/repositories/*"
      ],
      "@scheduleding*": [
        "src/infrastructure/scheduling/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@dtos/*": [
        "src/interfaces/dtos/*"
      ],
      "@controllers/*": [
        "src/interfaces/http/controllers/*"
      ],
      "@routes/*": [
        "src/interfaces/http/routes/*"
      ],
      "@swagger/*": [
        "src/interfaces/swagger/*"
      ],
      "@validation-schemas/*": [
        "src/interfaces/validation-schemas/*"
      ],
      "@middleware/*": [
        "src/interfaces/http/middleware/*"
      ],
      "@submodules/gallimore-dev-tools/config/*": [
        "submodules/gallimore-dev-tools/config/*"
      ],
      "@scripts/*": [
        "scripts/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@docs/*": [
        "docs/*"
      ],
      "@tests/*": [
        "__tests__/*"
      ],
      "@submodules/nufacturing/*": [
        "submodules/nufacturing/src/*"
      ],
      "@submodules/veracore/*": [
        "submodules/nufulfillment-veracore/src/*"
      ],
      "@submodules/devtools/*": [
        "submodules/gallimore-dev-tools/src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "submodules/gallimore-dev-tools/config/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "**/__mocks__/**/*"
  ]
}
