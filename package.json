{
  "name": "nufacturing-api",
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc -p tsconfig.json",
    "build:tests": "tsc -p tsconfig.tests.json",
    "start": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register index.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "start:staging": "cross-env NODE_ENV=staging ts-node src/index.ts",
    "start:prod": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "docs": "node swagger.js",
    "openapi:generate": "openapi-generator-cli generate",
    "openapi:install": "openapi-generator-cli version-manager set 5.3.1",
    "test": "jest --config jest.config.js --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "nyc npm test",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.0",
    "formidable": "^3.5.1",
    "helmet": "^7.1.0",
    "http": "^0.0.1-security",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.8.1",
    "mongoose": "^8.6.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "nufacturing-api": "file:",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.14.2",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.12",
    "@pact-foundation/pact": "^13.1.1",
    "@pact-foundation/pact-node": "^10.18.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.2.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.13.2",
    "eslint": "^8.57.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "nyc": "^15.1.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
