{
  "name": "nufacturing-api",
  "version": "1.0.0",
  "_moduleAliases": {
    "@app": "src/app",
    "@event-handlers": "src/app/event-handlers",
    "@domain": "src/domain",
    "@infrastructure": "src/infrastructure",
    "@interfaces": "src/interfaces",
    "@scheduling": "src/infrastructure/scheduling",
    "@controllers": "src/interfaces/http/controllers",
    "@middleware": "src/interfaces/http/middleware",
    "@repositories": "src/infrastructure/persistence/repositories"
  },
  "scripts": {
    "prepare": "npx husky install",
    "clean": "npx rimraf dist dist-tests",
    "build": "npm run clean && npx tsc -p submodules/gallimore-dev-tools/src/config/tsconfig.json",
    "start": "npx cross-env NODE_ENV=production node -r tsconfig-paths/register dist/main.js",
    "start:env": "npx cross-env NODE_ENV=${NODE_ENV:-local} npx ts-node -r tsconfig-paths/register -P submodules/gallimore-dev-tools/config/tsconfig.json src/main.ts",
    "dev": "npx nodemon --watch \"src/**/*.ts\" --exec \"npx ts-node -r tsconfig-paths/register -P submodules/gallimore-dev-tools/config/tsconfig.json src/main.ts\"",
    "test:build": "npx tsc --noEmit -p submodules/gallimore-dev-tools/config/tsconfig.json",
    "test": "npx jest --config submodules/gallimore-dev-tools/config/jest.config.js --coverage",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx nyc npm test",
    "e2e": "npx cypress run",
    "e2e:open": "npx cypress open",
    "lint": "eslint --ext .ts,.tsx --config submodules/gallimore-dev-tools/config/.eslintrc.js src",
    "lint:fix": "eslint --ext .ts,.tsx --config submodules/gallimore-dev-tools/config/.eslintrc.js src --fix",
    "format": "npx prettier --check 'src/**/*.{ts,tsx,js,json,css,scss,md}'",
    "format:fix": "npx prettier --write 'src/**/*.{ts,tsx,js,json,css,scss,md}'",
    "precommit": "npm run lint && npm run format",
    "plop": "npx plop --plopfile submodules/gallimore-dev-tools/config/plopfile.config.js",
    "link-configs": "node link-configs.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-async-errors": "^2.0.0",
    "express-validator": "^7.2.0",
    "formidable": "^3.5.1",
    "helmet": "^7.1.0",
    "http": "^0.0.1-security",
    "inversify": "^6.0.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.8.1",
    "mongoose": "^8.6.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "nufacturing-api": "file:",
    "reflect-metadata": "^0.2.2",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^4.1.2",
    "ts-morph": "^23.0.0",
    "winston": "^3.15.0",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.12",
    "@pact-foundation/pact": "^13.1.3",
    "@pact-foundation/pact-node": "^10.18.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.7.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.13.2",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lnk": "^1.1.0",
    "mongodb-memory-server": "^10.0.1",
    "nodemon": "^3.1.7",
    "nyc": "^15.1.0",
    "plop": "^4.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^4.1.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "resolutions": {
    "cookie": "0.7.0"
  }
}
